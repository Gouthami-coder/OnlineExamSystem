
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('../../Content/img/nature.jpg');
            background-size: cover;
        }
    </style>
    <title>StudentExam</title>
</head>
<body>
    @if (@ViewBag.error != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong>@ViewBag.error
        </div>

    }
    @using (Html.BeginForm())
    {


        <div class="container">
            <br />
            <br />
            <h1 style="text-align:center; color:antiquewhite;font-family:Algerian">Enter Room Number</h1>
            <input type="text" id="" name="room" placeholder="Room Number" class="form-control" />
            <br />
            <br />
            <input type="submit" value="SUBMIT" class="btn btn-info btn-block" />
        </div>
    }
</body>
</html>
